#include <iostream>

using namespace std;

double area_circle (double radius){
    double area;
    double pi {3.14};
    area = pi * radius * radius;
    return area;
}

int main(){
    cout << "Enter the radius of the circle: ";
    double radius;
    cin >> radius;
    
    cout << "The radius of the circle is : " << area_circle(radius);
    return 0;
}
