
#include <iostream>
#include <string>

using namespace std;

int main(){
    
    cout << "Enter the number of rows: ";
    int rows;
    cin >> rows;
    
    for ( int i = 1; i <= rows; i++){
        
        if ( i % 2 != 0){
            int num {1};
            for (int j = 1; j <= i; j++){
                cout << num << " ";
                num--;
                if (num < 0)
                num = 1;
                
            }
        }
        
        else{
            int num = 0;
            for (int j = 1; j <= i; j++){
                cout << num << " ";
                num--;
               if (num < 0)
                num = 1;
                
            }
        }
        cout << endl;
    }
    
    return 0;
}
